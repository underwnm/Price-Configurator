@*            @Model.RadioList[i].Name*@
@**@
@*            <br/>*@
@*        }*@

        <h4>Additional Optional Equipment</h4>
        @for (var i = 0; i < Model.CheckModels.Count; i++)
        {
            <table>
                <tr>
                    <td>
                        @Html.CheckBoxFor(it => it.CheckModels[i].Checked, new { Style = "vertical-align" })
                    </td>
                    <td>
                        @Html.HiddenFor(it => it.CheckModels[i].Id)
                        Price: $@Html.DisplayFor(it => it.CheckModels[i].Price) -
                        @Html.DisplayFor(it => it.CheckModels[i].Name)
                    </td>
                </tr>
            </table>
        }

    </div>
    <div class="text-center">
        <input type="submit" value="Get Price Quote" class="btn btn-primary" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
