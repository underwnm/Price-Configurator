@model Price_Configurator.ViewModels.SelectionViewModel
@{
    ViewBag.Title = "Selected Product";
}
@using (Html.BeginForm())
{
    <div class="span12">
        <div class="text-center col-xs-12">
            <h2>@Model.Product.Name</h2>
            <div class="product-img">
                <img class="img-responsive center-block" src="@Model.Product.PictureUrl" />
            </div>
            <div class="product-info">
                <div class="product-title text-center">
                    <h4>Base Price: $@Model.Product.ListPrice</h4>
                </div>
            </div>
        </div>
        
@*        @for (int i = 0; i < Model.RadioList.Count; i++)*@
