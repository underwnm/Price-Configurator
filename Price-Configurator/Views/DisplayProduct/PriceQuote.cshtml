@model Price_Configurator.ViewModels.PriceQuoteViewModel
@{
    ViewBag.Title = "PriceQuote";
}

@using (Html.BeginForm())
{
    <div class="span12">
        <div class="text-center col-xs-12">
            <h2>@Model.Product.Name</h2>
            <div class="product-img">
                <img class="img-responsive center-block" src="@Model.Product.PictureUrl"/>
            </div>
        </div>
        <br/>
        <br/>
        <br/>
        <h4 class="text-center">Selected Equipment</h4>
        <table class="table table-striped table-hover col-md-6">
            <thead>
            <tr>
                <th>Equipment</th>
                <th>Price</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Base Model</td>
                <td>@Model.Product.ListPrice</td>
            </tr>
            @foreach (var equipment in Model.SelectedEquipment)
            {
                <tr>
                    <td>@equipment.Name</td>
                    <td>@equipment.Price</td>
                </tr>
            }
            </tbody>
        </table>
        <h4 class="text-center">Total Price: @Model.TotalPrice</h4>
        <br />
        <div class="text-center">
            <input type="submit" value="Submit Quote" class="btn btn-primary"/>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
