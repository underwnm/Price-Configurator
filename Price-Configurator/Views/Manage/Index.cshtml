@model Price_Configurator.ViewModels.Manage.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<br/>
<p class="text-success text-center">@ViewBag.StatusMessage</p>
<div class="container span12">
    <div class="span12">
        <h4 class="text-center">Account Management</h4>
        <table class="table table-striped table-hover col-md-6">
            <thead>
            <tr>
                <th>User Settings</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Password</td>
                <td class="btn-group pull-right">
                    <a href="@Url.Action("ChangePassword", "Manage")" class="btn btn-primary">Change</a>
                </td>
            </tr>
            <tr>
                <td>Email</td>
                <td class="btn-group pull-right">
                    <a href="@Url.Action("ChangeEmail", "Manage")" class="btn btn-primary">Change</a>
                </td>
            </tr>
            <tr>
                <td>Phone Number</td>
                <td class="btn-group pull-right">
                    <a href="@Url.Action("ChangePhoneNumber", "Manage")" class="btn btn-primary">Change</a>
                </td>
            </tr>
            </tbody>
        </table>
        @if (ViewBag.displayMenu == "Yes")
        {
            <h4 class="text-center">Role Management</h4>
            <table class="table table-striped table-hover col-md-6">
                <thead>
                <tr>
                    <th>Table Names</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Roles</td>
                    <td class="btn-group pull-right">
                        <a href="@Url.Action("Roles", "Manage")" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
                <tr>
                    <td>Users</td>
                    <td class="btn-group pull-right">
                        <a href="@Url.Action("Users", "Manage")" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
                </tbody>
            </table>
            <h4 class="text-center">Product Management</h4>
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>Table Names</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Products</td>
                    <td class="btn-group pull-right">
                        <a href="@Url.Action("Products", "Manage")" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
                <tr>
                    <td>Categories</td>
                    <td class="btn-group pull-right">
                        <a href="@Url.Action("ProductCategories", "Manage")" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
                <tr>
                    <td>Models</td>
                    <td class="btn-group pull-right">
                        <a href="@Url.Action("ProductModels", "Manage")" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
                <tr>
                    <td>Equipment Rules</td>
                    <td class="btn-group pull-right">
                        <a href="@Url.Action("ProductEquipmentRules", "Manage")" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
                <tr>
                    <td>Equipment Options</td>
                    <td class="btn-group pull-right">
                        <a href="@Url.Action("ProductsEquipment", "Manage")" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
                </tbody>
            </table>

            <h4 class="text-center">Equipment Management</h4>
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>Table Names</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Equipment</td>
                    <td class="btn-group pull-right">
                        <a href="@Url.Action("Equipment", "Manage")" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
                <tr>
                    <td>Groups</td>
                    <td class="btn-group pull-right">
                        <a href="@Url.Action("EquipmentGroups", "Manage")" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
                <tr>
                    <td>Types</td>
                    <td class="btn-group pull-right">
                        <a href="@Url.Action("EquipmentTypes", "Manage")" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
                <tr>
                    <td>Rules</td>
                    <td class="btn-group pull-right">
                        <a href="@Url.Action("EquipmentRules", "Manage")" class="btn btn-primary">Manage</a>
                    </td>
                </tr>
                </tbody>
            </table>
        }
    </div>
</div>