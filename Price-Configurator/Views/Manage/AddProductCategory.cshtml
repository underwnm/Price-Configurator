@model Price_Configurator.ViewModels.ProductCategoryViewModel
@{
    ViewBag.Title = "Add Product Category";
}

<h2>Product Category</h2>

@using (Html.BeginForm("AddProductCategory", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add Product Category Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Product Category" class="btn btn-default" />
        </div>
    </div>
    <p>
        @Html.ActionLink("Back to product category manager.", "ProductCategories", "Manage")
    </p>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}