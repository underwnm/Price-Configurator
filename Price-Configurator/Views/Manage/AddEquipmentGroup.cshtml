@model Price_Configurator.ViewModels.EquipmentGroupViewModel
@{
    ViewBag.Title = "Add Equipment Group";
}

<h2>Equipment Group</h2>

@using (Html.BeginForm("EquipmentGroups", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add Equipment Group Form</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Description,
                new
                {
                    @class = "form-control",
                })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Equipment Group" class="btn btn-default" />
        </div>
    </div>
    <p>
        @Html.ActionLink("Back to product manager.", "EquipmentGroups", "Manage")
    </p>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}