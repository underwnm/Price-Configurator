@model Price_Configurator.ViewModels.UserRoleViewModel
@{
    ViewBag.Title = "UserRoles";
}

<h2 class="text-center">Manage User Roles</h2>

<div class="span12">
    <table class="table table-striped table-responsive">
        <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th>Roles</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var role in Model.ApplicationUsers)
        {
            <tr>
                <td>@role.UserName</td>
                <td>@role.Email</td>
                <td>@role.PhoneNumber</td>
                <td>Admin</td>
                <td class="btn-group pull-right">
                    <a href="#" class="btn btn-warning">Edit</a>
                    <a href="#" class="btn btn-danger">Remove</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="text-center">
        <a href="@Url.Action("Index", "Manage")" class="btn btn-default">Back</a>
        <a href="@Url.Action("Register", "Account")" class="btn btn-primary">Create</a>
    </div>
</div>
