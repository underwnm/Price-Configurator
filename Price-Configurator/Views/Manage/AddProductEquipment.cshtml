@model Price_Configurator.ViewModels.ProductEquipmentViewModel
@{
    ViewBag.Title = "Add Product Equipment";
}

<h2>Product Equipment</h2>

@using (Html.BeginForm("AddProductEquipment", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add Product Equipment Form</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.ProductId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.ProductId,
                new SelectList(Model.Products, "Id", "Name"),
                "",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ProductId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EquipmentId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.EquipmentId,
                new SelectList(Model.Equipments, "Id", "Name"),
                "",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.EquipmentId)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Product Equipment" class="btn btn-default" />
        </div>
    </div>
    <p>
        @Html.ActionLink("Back to product equipment manager.", "Products", "Manage")
    </p>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}