@model Price_Configurator.ViewModels.ProductEquipmentRuleViewModel
@{
    ViewBag.Title = "Manage Product Equipment Rules";
}

<h2 class="text-center">Manage Product Rules</h2>

<div class="span12">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Product</th>
            <th>Rule</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var role in Model.CurrentProductEquipmentRules)
        {
            <tr>
                <td>@role.Product.Name</td>
                <td>@role.EquipmentRule.Name</td>
                <td class="btn-group pull-right">
                    <a href="#" class="btn btn-warning">Edit</a>
                    <a href="#" class="btn btn-danger">Remove</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    <div class="text-center">
        <a href="@Url.Action("Index", "Manage")" class="btn btn-default">Back</a>
        <a href="@Url.Action("AddProductEquipmentRule", "Manage")" class="btn btn-primary">Create</a>
    </div>

</div>