@model Price_Configurator.ViewModels.ProductEquipmentRuleViewModel
@{
    ViewBag.Title = "Add Product Equipment Rule";
}

<h2>Product Equipment Rule</h2>

@using (Html.BeginForm("AddProductEquipmentRule", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add Product Equipment Rule Form</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.ProductId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.ProductId,
                new SelectList(Model.Products, "Id", "Name"),
                "",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ProductId)
        </div>
    </div>    
    <div class="form-group">
        @Html.LabelFor(m => m.EquipmentRuleId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.EquipmentRuleId,
                new SelectList(Model.EquipmentRules, "Id", "Name"),
                "",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.EquipmentRuleId)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Product Equipment Rule" class="btn btn-default" />
        </div>
    </div>
    <p>
        @Html.ActionLink("Back to product equipment rule manager.", "ProductEquipmentRules", "Manage")
    </p>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}