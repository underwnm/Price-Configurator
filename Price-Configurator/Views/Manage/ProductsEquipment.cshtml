@model Price_Configurator.ViewModels.ProductEquipmentViewModel
@{
    ViewBag.Title = "Manage Products Equipment";
}

<h2 class="text-center">Manage Product Equipment</h2>

<div class="span12">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Product</th>
            <th>Equipment</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var role in Model.CurrentProductEquipments)
        {
            <tr>
                <td>@role.Product.Name</td>
                <td>@role.Equipment.Name</td>
                <td class="btn-group pull-right">
                    <a href="#" class="btn btn-warning">Edit</a>
                    <a href="#" class="btn btn-danger">Remove</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    <div class="text-center">
        <a href="@Url.Action("Index", "Manage")" class="btn btn-default">Back</a>
        <a href="@Url.Action("AddProductEquipment", "Manage")" class="btn btn-primary">Create</a>
    </div>

</div>