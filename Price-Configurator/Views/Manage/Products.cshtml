@model Price_Configurator.ViewModels.ProductViewModel
@{
    ViewBag.Title = "Manage Products";
}

<h2 class="text-center">Manage Products</h2>

<div class="span12">
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Product</th>
            <th>Model</th>
            <th>List Price</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var role in Model.Products)
        {
            <tr>
                <td>@role.Name</td>
                <td>@role.ProductModel.Name</td>
                <td>$@role.ListPrice</td>
                <td class="btn-group pull-right">
                    <a href="@Url.Action("EditProduct", "Manage", new { id = role.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteProduct", "Manage", new { id = role.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div class="text-center">
    <a href="@Url.Action("Index", "Manage")" class="btn btn-default">Back</a>
    <a href="@Url.Action("AddProduct", "Manage")" class="btn btn-primary">Create</a>
</div>
