@model Price_Configurator.ViewModels.EquipmentGroupViewModel
@{
    ViewBag.Title = "Manage Equipment Groups";
}

<h2 class="text-center">Manage Equipment Groups</h2>

<div class="span12">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Group</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var role in Model.EquipmentGroups)
        {
            <tr>
                <td>@role.Description</td>
                <td class="btn-group pull-right">
                    <a href="#" class="btn btn-warning">Edit</a>
                    <a href="#" class="btn btn-danger">Remove</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="text-center">
        <a href="@Url.Action("Index", "Manage")" class="btn btn-default">Back</a>
        <a href="@Url.Action("AddEquipmentGroup", "Manage")" class="btn btn-primary">Create</a>
    </div>
</div>