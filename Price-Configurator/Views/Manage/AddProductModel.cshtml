@model Price_Configurator.ViewModels.ProductModelViewModel
@{
    ViewBag.Title = "Add Product Model";
}

@using (Html.BeginForm("AddProductModel", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <br/>
    <form class="form-horizontal">
        <fieldset>
            <legend>Add Product Model</legend>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ProductCategoryId, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.DropDownListFor(m => m.ProductCategoryId,
                        new SelectList(Model.ProductCategories, "Id", "Name"),
                        "",
                        new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.ProductCategoryId)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
    <br />

    <p>@Html.ActionLink("Back to Product Models.", "ProductModels", "Manage")</p>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}