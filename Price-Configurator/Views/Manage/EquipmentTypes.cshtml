@model Price_Configurator.ViewModels.EquipmentTypeViewModel
@{
    ViewBag.Title = "Manage Equipment Types";
}

<h2 class="text-center">Manage Equipment Types</h2>

<div class="span12">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Type</th>
            <th>Group</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var role in Model.EquipmentTypes)
        {
            <tr>
                <td>@role.Name</td>
                    @if (role.EquipmentGroupId == null)
                    {
                        <td></td>
                    }
                    else
                    {
                        <td>
                            @role.EquipmentGroup.Description
                        </td>
                    }
                <td class="btn-group pull-right">
                    <a href="@Url.Action("EditEquipmentType", "Manage", new { id = role.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteEquipmentType", "Manage", new { id = role.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="text-center">
        <a href="@Url.Action("Index", "Manage")" class="btn btn-default">Back</a>
        <a href="@Url.Action("AddEquipmentType", "Manage")" class="btn btn-primary">Create</a>
    </div>
</div>