@model Price_Configurator.ViewModels.RoleViewModel
@{
    ViewBag.Title = "Roles";
}

<h2 class="text-center">Manage Roles</h2>

<div class="span12">
    
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Role</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
                <td class="btn-group pull-right">
                    <a href="@Url.Action("EditRole", "Manage", new { id = role.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteRole", "Manage", new { id = role.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="text-center">
        <a href="@Url.Action("Index", "Manage")" class="btn btn-default">Back</a>
        <a href="@Url.Action("AddRole", "Manage")" class="btn btn-primary">Create</a>
    </div>
</div>

