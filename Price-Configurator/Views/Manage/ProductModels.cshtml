@model Price_Configurator.ViewModels.ProductModelViewModel
@{
    ViewBag.Title = "Manage Product Models";
}

<h2 class="text-center">Manage Product Models</h2>

<div class="span12">
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Model</th>
            <th>Category</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var role in Model.ProductModels)
        {
            <tr>
                <td>@role.Name</td>
                <td>@role.ProductCategory.Name</td>
                <td class="btn-group pull-right">
                    <a href="@Url.Action("EditProductModel", "Manage", new { id = role.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteProductModel", "Manage", new { id = role.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="text-center">
        <a href="@Url.Action("Index", "Manage")" class="btn btn-default">Back</a>
        <a href="@Url.Action("AddProductModel", "Manage")" class="btn btn-primary">Create</a>
    </div>

</div>