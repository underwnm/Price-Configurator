@model Price_Configurator.ViewModels.RoleViewModel
@{
    ViewBag.Title = "Add Role";
}

@using (Html.BeginForm("AddRole", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <br/>
    <form class="form-horizontal">
        <fieldset>
            <legend>Add Role</legend>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-danger">Clear</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </fieldset>
    </form>
    <br/>

    <a href="@Url.Action("Roles", "Manage")" class="btn btn-default">Back</a>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}