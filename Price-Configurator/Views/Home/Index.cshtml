@model Price_Configurator.ViewModels.Manage.NavBarViewModel
@{
    ViewBag.Title = "Home Index";
}
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Price Configurator", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @foreach (var item in Model.ProductCategories)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @item.Name
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">

                            @{
                                var modelList = Model.ProductModels.Where(m => m.ProductCategoryId == item.Id).ToList();
                                if (Model.ProductCategories.Any())
                                {
                                    foreach (var modelItem in modelList)
                                    {
                                        <li>@Html.ActionLink(@modelItem.Name, "Index", "DisplayProduct", routeValues: new {id = modelItem.Id}, htmlAttributes: new {title = "Products"})</li>
                                    }
                                }
                            }
                        </ul>
                    </li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
